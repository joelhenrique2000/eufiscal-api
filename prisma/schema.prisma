// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id Int @id @default(autoincrement())
  nome String @unique
  criadoEm DateTime @default(now())
  atualizadoEm DateTime? @updatedAt
  removidoEm DateTime?
  problemas Problema[]
}

model Status {
  id Int @id @default(autoincrement())
  nome String @unique
  criadoEm DateTime @default(now())
  atualizadoEm DateTime? @updatedAt
  removidoEm DateTime?
  problemas Problema[]
  historicos HistoricoProblema[]
}

model Problema {
  id Int @id @default(autoincrement())
  descricao String 
  fotoURL String 
  isResidente Boolean
  latitude BigInt
  longitude BigInt 
  criadoEm DateTime @default(now())
  atualizadoEm DateTime? @updatedAt
  removidoEm DateTime?
  categoria    Categoria    @relation(fields: [categoriaID], references: [id])
  categoriaID  Int
  status    Status    @relation(fields: [statusID], references: [id])
  statusID  Int
  cidade    Cidade    @relation(fields: [cidadeID], references: [id])
  cidadeID  Int
  historicos HistoricoProblema[]
}

model HistoricoProblema{
  id Int @id @default(autoincrement())
  problema    Problema    @relation(fields: [problemaID], references: [id])
  problemaID  Int
  status    Status    @relation(fields: [statusID], references: [id])
  statusID  Int

}

model Usuario {
  id Int @id @default(autoincrement())
  nome String 
  cpf String 
  email String 
  senha String 
  criadoEm DateTime   @default(now())
  atualizadoEm DateTime? @updatedAt
  removidoEm DateTime?
}

model Estado {
  id Int @id @default(autoincrement())
  nome String 
  sigla String 
  criadoEm DateTime  @default(now())
  atualizadoEm DateTime? @updatedAt
  removidoEm DateTime?
  cidades Cidade[]
}

model Cidade {
  id Int @id @default(autoincrement())
  nome String 
  latitude BigInt
  longitude BigInt 
  criadoEm DateTime @default(now())
  atualizadoEm DateTime? @updatedAt
  removidoEm DateTime?
  estado Estado @relation(fields: [estadoID], references: [id])
  estadoID  Int
  problemas Problema[]
}